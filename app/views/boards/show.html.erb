<section class="text-gray-600 body-font mx-auto" style="overflow: auto;">
  <%= turbo_frame_tag "grid", src: grid_board_path(@board), loading: :lazy, class: "loading-grid w-full mb-10 flex bg-white" do %>
    <div class="w-full flex bg-white">
      <% @skeleton_width.times do %>
        <div class="shrink flex-1 w-5">
          <% @skeleton_heigth.times do %>
            <div class="<%=class_names('border-2 flex-1 h-5 board-cell')%>")>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="spinner">
      <% if @board.board_data.nil? %>
        <h1>Board is being generated. Please wait...</h1>
      <% end %>
    </div>
  <% end %>
  <div class="container mx-auto flex flex-col px-5 py-24 justify-center items-center">
    <div class="w-full md:w-2/3 flex flex-col mb-16 items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900"><%= "#{@board.name} (#{@board.width}x#{@board.height})" %></h1>
      <p class="mb-8 leading-relaxed"><b>Bomb count:</b> <%= @board.bombs %></p>
      <p class="mb-8 leading-relaxed"><b>Generated by:</b> <%= @board.email %></p>
      <p class="mb-8 leading-relaxed"><b>Generated: </b> <%= time_tag @board.created_at, 'data-local': 'time-ago' %></p>
      <div class="flex w-full justify-center items-end">
        <div class="relative mr-4 lg:w-full xl:w-1/2 w-2/4 md:w-full text-center">
          <%= link_to "Go back", 
            root_path(), 
            class: "rounded py-3 px-5 bg-gray-600 text-white block hover:bg-gray-800" %>
        </div>
      </div>
    </div>
  </div>
</section>
