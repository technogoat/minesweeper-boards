<%= turbo_frame_tag "boards", class: "min-w-full" do %>
  <table class="min-w-full bg-white">
    <thead class="bg-gray-600 text-white">
      <tr>
        <th id="board-name" class="text-left py-3 px-6 uppercase font-semibold text-sm hover:cursor-pointer relative">
          <%= sort_indicator if params[:sort_by] == "name" %>
          <%= sort_link(sort_by: "name", label: "Name") %>
        </th>
        <th id="board-width" class="text-left py-3 px-6 uppercase font-semibold text-sm hover:cursor-pointer relative">
          <%= sort_indicator if params[:sort_by] == "width" %>
          <%= sort_link(sort_by: "width", label: "Width") %>
        </th>
        <th id="board-height" class="text-left py-3 px-6 uppercase font-semibold text-sm hover:cursor-pointer relative">
          <%= sort_indicator if params[:sort_by] == "height" %>
          <%= sort_link(sort_by: "height", label: "height") %>
        </th>
        <th id="board-bombs" class="text-left py-3 px-6 uppercase font-semibold text-sm hover:cursor-pointer relative">
          <%= sort_indicator if params[:sort_by] == "bombs" %>
          <%= sort_link(sort_by: "bombs", label: "Bombs") %>
        </th>
        <th id="board-email" class="text-left py-3 px-6 uppercase font-semibold text-sm hover:cursor-pointer relative">
          <%= sort_indicator if params[:sort_by] == "email" %>
          <%= sort_link(sort_by: "email", label: "Generated by") %>
        </th>
        <th id="board-timestamp" class="text-left py-3 px-6 uppercase font-semibold text-sm hover:cursor-pointer relative">
          <%= sort_indicator if params[:sort_by] == "created_at" %>
          <%= sort_link(sort_by: "created_at", label: "Generated at") %>
        </th>
        <th id="board-show" class="text-left py-3 px-6 uppercase font-semibold text-sm">
          #
        </th>
      </tr>
    </thead>
    <tbody class="text-gray-700">
      <% @boards.each do |board| %>
        <tr>
          <td class="text-left py-3 px-6"><%= board.name %></td>
          <td class="text-left py-3 px-6"><%= board.width %></td>
          <td class="text-left py-3 px-6"><%= board.height %></td>
          <td class="text-left py-3 px-6"><%= board.bombs %></td>
          <td class="text-left py-3 px-6"><%= board.email %></td>
          <td class="text-left py-3 px-6"><%= time_tag board.created_at, 'data-local': 'time-ago' %></td>
          <td class="text-left py-3 px-6"><%= link_to 'View Board', board_path(board), data: {turbo: false} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render "pager", pagy: @pagy %>
<% end %>
