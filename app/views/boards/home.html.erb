<div class="w-full">
  <div id="boards" class="max-w-7xl mx-auto mt-12">
    <div class="shadow overflow-hidden rounded border-b border-gray-200">
      <%= turbo_frame_tag "boards", src: boards_path, loading: :lazy, class: "min-w-full" do %>
        <div class="flex flex-col space-y-6">
          <table class="min-w-full bg-white">
            <thead class="bg-gray-600 text-white">
              <tr>
                <th class="py-3 px-6 relative">
                  Loading...
                </th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% 25.times do%>
                <tr class="py-3 px-6 relative">
                  <td class="text-left py-3 px-6">
                    <div class="animate-pulse flex space-x-4 h-4 bg-gray-400 rounded w-full">
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
